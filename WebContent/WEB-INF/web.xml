  </servlet-mapping>
  
  <servlet>
    <servlet-name>phoneimage</servlet-name>
    <servlet-class>com.novahome.servlet.phone.PhoneImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>phoneimage</servlet-name>
    <url-pattern>/phone/phoneimage</url-pattern>
  </servlet-mapping>
  
  <listener>
    <listener-class> org.springframework.web.context.ContextLoaderListener </listener-class>
  </listener>
</web-app>